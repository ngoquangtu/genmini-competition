<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generate Story</title>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <h1>Generate Story</h1>
    <form id="storyForm">
        <label for="inputText">Input Text:</label>
        <textarea id="inputText" name="inputText" rows="4" cols="50"></textarea><br>
        <button type="submit">Generate Story</button>
    </form>
    <div id="story"></div>

    <script>
        const socket = io();

        document.getElementById('storyForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const inputText = document.getElementById('inputText').value;
            document.getElementById('story').innerHTML = '';
            socket.emit('generateStory', inputText);
        });

        socket.on('storyChunk', function(chunk) {
            document.getElementById('story').innerHTML += chunk;
        });

        socket.on('storyEnd', function() {
            console.log('Story generation complete');
        });

        socket.on('error', function(error) {
            console.error(error);
            alert(error);
        });
    </script>
</body>
</html>
